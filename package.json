{
  "name": "manuscript-desktop",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "description": "Manuscript desktop application (Electron + FastAPI)",
  "author": "",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:backend:exe": "cd backend && pyinstaller --onefile --name manuscript-backend main.py",
    "build:electron:assets": "node ./electron/copy-dist.js",
    "dist": "npm run build:frontend && npm run build:backend:exe && npm run build:electron:assets && electron-builder"
  },
  "build": {
    "appId": "com.example.manuscript",
    "directories": {
      "output": "build_dist"
    },
    "files": [
      "electron/**",
      "frontend/dist/**",
      "!backend/config/**"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend/dist",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "forceCodeSigning": false
    }
  },
  "devDependencies": {
    "electron": "40.4.1",
    "electron-builder": "^26.8.1"
  }
}
